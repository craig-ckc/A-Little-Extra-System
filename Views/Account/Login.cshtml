@using A_Little_Extra_System.Data.ViewModal
@model Login

@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5 mb-5">
    <div class="row d-flex justify-content-center">
        <div class="col-md-6">
            <div class="card px-5 py-5" id="form1">
                <div class="text-center mb-5">
                    <h5 class="modal-title h-02 text-prim-color">Welcome Back</h5>
                </div>

                @if (TempData["Error"] != null)
                {
                    <div class="col-md-12 alert alert-danger">
                        <span><b>Sorry!</b> - @TempData["Error"] </span>
                    </div>
                }

                <form asp-action="Login" class="row g-3">

                    <div class="col-md-12">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" type="text" class="form-control" placeholder="user@alittleextra.com">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="col-md-12">
                        <label asp-for="Password" class="form-label">Password</label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="col-12 ">
                        <input class="btn btn-primary mb-2 w-100" type="submit" value="Log in" />
                        <div class="text-center w-100">
                            <p>Donâ€™t have an account? <a asp-area="" asp-controller="Account" asp-action="Register"
                                    class="special-text">Sign up now</a><br> now or continue as a <a asp-area=""
                                    asp-controller="Home" asp-action="Index" class="special-text">guest</a></p>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
